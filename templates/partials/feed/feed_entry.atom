<entry>
   <title>@title</title>
   <id>tag:@base_url/@permalink,@updated</id>
   <updated>@updated</updated>
   <summary>@page_description</summary>
   <link rel="alternate" type="text/html" href="@base_url/@permalink" />
   <content type="xhtml" xml:base="@base_url" xml:lang="en">
      <div xmlns="http://www.w3.org/1999/xhtml">
          :feed_media
          if @content do 
            @content
          endif
      </div>
   </content>
</entry>